{% extends 'base.html.twig' %}

{% block title %}Validate my command - Daki Suki{% endblock %}

{% block content %}

    <h1>Validate my command</h1>
    <p>Please choose your preferences before to validate your command.</p>

    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action:path('order_summary')}) }}
                {{ form_end(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]' : '<br>'})|raw }}
        </div>
        <div class="col-md-6">
            <b>Summary:</b><br>
            <div class="order-summary">
                {% for key,product in cart %}
                    <div class="row {% if key > 0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img src="/upload/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
                        </div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}<br>
                            <small>{{ product.product.subtitle }}</small>
                        </div>
                        <div class="col-2 my-auto">x {{ product.quantity }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
