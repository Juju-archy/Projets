{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Daki Suki{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5">
            <img src="/upload/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price / 100)|number_format(2,',','.') }} â‚¬</span>
            <hr>
            <p>{{ product.description }}</p>
            <hr>
            <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn btn-primary">Add to cart</a>
        </div>
    </div>

{% endblock %}