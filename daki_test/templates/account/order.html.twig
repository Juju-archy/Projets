{% extends 'base.html.twig' %}

{% block title %}My orders{% endblock %}

{% block content %}
    <h1>My order</h1>
    <a href="{{ path('account') }}" class="btn btn-success">Back</a><br>
    <hr>

    {% if orders|length == 0 %}
        <p class="text-center">
            You don't have order on your account.
        </p>
    {% else %}
        <div class="row">
            <table class="table mt-4">
                <thead>
                <tr>
                    <th scope="col">Reference</th>
                    <th scope="col">At</th>
                    <th scope="col">Products</th>
                    <th scope="col">Total</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for order in orders %}
                        <tr>
                            <td><span class="badge badge-secondary">{{ order.reference }}</span></td>
                            <td>{{ order.createdAt|date('d/m/Y') }}</td>
                            <td>{{ order.orderDetails|length }}</td>
                            <td>{{ ((order.carrierPrice + order.getTotal)/100)|number_format(2, ',', '.') }}â‚¬</td>
                            <td class="text-right"><a href="{{ path('account_order_show', {'reference' : order.reference}) }}">My order</a></td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
